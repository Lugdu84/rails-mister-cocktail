<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(
          <% if cocktail.photo.attached? %>
            <%= cl_image_path(cocktail.photo.key, height: 360, crop: :fill) %>
          <% else %>
            <%= cl_image_path('mojito-cocktails-814a3f7_xf3omg', height: 360, crop: :fill) %>
          <% end %>
          )">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)  %></h5>
        <%= link_to cocktail_path(cocktail), method: :delete, class: 'btn-delete' do %>
          <%= icon('fas', 'trash') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>