<div class="container mt-3 mb-3 text-white bg-info">
  <h1 class="text-center"><%= @cocktail.name %></h1>
  <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">

    <% @cocktail.doses.each do |dose| %>
      <div class="text-center">
        <p><%= dose.ingredient.name %> : <%= dose.description %></p>
        <div>
          <%= link_to dose_path(dose), method: :delete, class: "" do %>
            <%= icon('fas', 'trash') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Ajouter', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
</div>


