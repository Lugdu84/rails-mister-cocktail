<div class="container mt-3 mb-3 text-white bg-secondary">
  <h1 class="text-center"><%= @cocktail.name %></h1>
  <div class="card mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url(
      <% if @cocktail.photo.attached? %>
        <%= cl_image_path(@cocktail.photo.key, height: 360, crop: :fill) %>
      <% else %>
        <%= cl_image_path('mojito-cocktails-814a3f7_xf3omg', height: 360, crop: :fill) %>
      <% end %>
      )">
    <% @cocktail.doses.each do |dose| %>
      <div class="card border-0 bg-transparent text-center mb-3 mt-4">
        <p><%= dose.ingredient.name %> : <%= dose.description %></p>
          <%= link_to dose_path(dose), method: :delete, data: {confirm: "Etes-vous sûr de vouloir supprimer #{dose.ingredient.name}"}, class: "text-danger" do %>
            <%= icon('fas', 'trash') %>
          <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Ajouter un ingrédient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mb-3' %>
</div>


