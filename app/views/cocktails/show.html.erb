<div class="container mt-3 mb-3 text-white">
  <div class="card mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
    url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <h3 class="card-title text-center"><%= @cocktail.name %></h3>
    <% @cocktail.doses.each do |dose| %>
      <div class="card-body text-center">
        <p><%= dose.ingredient.name %> : <%= dose.description %></p>
        <%= link_to dose_path(dose), method: :delete, class: "btn-delete" do %>
          <%= icon('fas', 'trash') %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Ajouter', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>


  <%= link_to 'Liste des cocktails', cocktails_path, class: 'btn btn-primary'%>

</div>


